{
  "name": "react-router-auto-routes",
  "version": "0.4.0",
  "description": "Automatic folder-based routing with colocation for React Router v7+",
  "type": "module",
  "bin": {
    "migrate-auto-routes": "dist/cli.cjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "NODE_OPTIONS=\"--no-warnings=DEP0040\" vitest",
    "typecheck": "tsc -b",
    "prepublishOnly": "npm run typecheck && npm run build && npm run test -- --run",
    "release:minor": "npm version minor && git push && git push --tags && npm publish",
    "release:patch": "npm version patch && git push && git push --tags && npm publish"
  },
  "keywords": [
    "react-router",
    "routes",
    "routing",
    "flexible",
    "colocation",
    "file-based",
    "flat-routes"
  ],
  "author": {
    "name": "Kenn Ejima",
    "email": "kenn@users.noreply.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kenn/react-router-auto-routes.git"
  },
  "license": "MIT",
  "dependencies": {
    "picomatch": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "@types/picomatch": "^4.0.2",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
